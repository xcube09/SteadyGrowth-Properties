@page
@model SteadyGrowth.Web.Areas.Admin.Pages.Settings.Currency.IndexModel
@{
    ViewData["Title"] = "Currency Management";
}

<div class="d-flex flex-column flex-column-fluid">
    <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
        <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Currency Management</h1>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    <li class="breadcrumb-item text-muted">
                        <a href="/Admin" class="text-muted text-hover-primary">Admin</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-400 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">
                        <a href="/Admin/Settings" class="text-muted text-hover-primary">Settings</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-400 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">Currency Management</li>
                </ul>
            </div>
            <div class="d-flex align-items-center gap-2 gap-lg-3">
                <a href="/Admin/Settings/Currency/Add" class="btn btn-sm fw-bold btn-primary">
                    <i class="ki-duotone ki-plus fs-2"></i>Add Currency
                </a>
            </div>
        </div>
    </div>

    <div id="kt_app_content" class="app-content flex-column-fluid">
        <div id="kt_app_content_container" class="app-container container-xxl">
            @if (!string.IsNullOrEmpty(Model.StatusMessage))
            {
                <div class="alert alert-dismissible bg-light-info d-flex flex-column flex-sm-row p-5 mb-10">
                    <i class="ki-duotone ki-information fs-2hx text-info me-4 mb-5 mb-sm-0">
                        <span class="path1"></span>
                        <span class="path2"></span>
                        <span class="path3"></span>
                    </i>
                    <div class="d-flex flex-column pe-0 pe-sm-10">
                        <span>@Model.StatusMessage</span>
                    </div>
                    <button type="button" class="position-absolute position-sm-relative m-2 m-sm-0 top-0 end-0 btn btn-icon ms-sm-auto" data-bs-dismiss="alert">
                        <i class="ki-duotone ki-cross fs-1 text-info">
                            <span class="path1"></span>
                            <span class="path2"></span>
                        </i>
                    </button>
                </div>
            }

            <div class="card">
                <div class="card-header border-0 pt-6">
                    <div class="card-title">
                        <div class="d-flex align-items-center position-relative my-1">
                            <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-5">
                                <span class="path1"></span>
                                <span class="path2"></span>
                            </i>
                            <input type="text" data-kt-currency-table-filter="search" class="form-control form-control-solid w-250px ps-13" placeholder="Search currency..." />
                        </div>
                    </div>
                    <div class="card-toolbar">
                        <div class="d-flex justify-content-end align-items-center">
                            @if (Model.DefaultCurrency != null)
                            {
                                <span class="badge badge-light-primary fs-7 fw-bold me-3">
                                    Default: @Model.DefaultCurrency.Code
                                </span>
                            }
                        </div>
                    </div>
                </div>

                <div class="card-body py-4">
                    <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_currency_table">
                        <thead>
                            <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">
                                <th class="min-w-50px">Code</th>
                                <th class="min-w-125px">Name</th>
                                <th class="min-w-100px">Symbol</th>
                                <th class="min-w-100px">Exchange Rate</th>
                                <th class="min-w-100px">Decimal Places</th>
                                <th class="min-w-100px">Status</th>
                                <th class="min-w-100px">Default</th>
                                <th class="text-end min-w-100px">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="text-gray-600 fw-semibold">
                            @foreach (var currency in Model.Currencies)
                            {
                                <tr>
                                    <td>
                                        <span class="badge badge-light-dark">@currency.Code</span>
                                    </td>
                                    <td>@currency.Name</td>
                                    <td>
                                        <span class="fs-3">@currency.Symbol</span>
                                    </td>
                                    <td>@currency.ExchangeRate.ToString("N6")</td>
                                    <td>@currency.DecimalPlaces</td>
                                    <td>
                                        @if (currency.IsActive)
                                        {
                                            <span class="badge badge-light-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-light-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        @if (currency.IsDefault)
                                        {
                                            <i class="ki-duotone ki-check-circle fs-2 text-primary">
                                                <span class="path1"></span>
                                                <span class="path2"></span>
                                            </i>
                                        }
                                        else
                                        {
                                            <form method="post" asp-page-handler="SetDefault" asp-route-id="@currency.Id" class="d-inline" 
                                                  onsubmit="return confirm('Are you sure you want to set @currency.Code as the default currency? This will change how all monetary amounts are displayed.');">
                                                <button type="submit" class="btn btn-sm btn-light-primary py-1 px-3">Set Default</button>
                                            </form>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a href="#" class="btn btn-light btn-active-light-primary btn-sm" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                            Actions
                                            <i class="ki-duotone ki-down fs-5 m-0"></i>
                                        </a>
                                        <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
                                            <div class="menu-item px-3">
                                                <a href="/Admin/Settings/Currency/Edit/@currency.Id" class="menu-link px-3">Edit</a>
                                            </div>
                                            <div class="menu-item px-3">
                                                <a href="/Admin/Settings/Currency/History/@currency.Id" class="menu-link px-3">View History</a>
                                            </div>
                                            @if (!currency.IsDefault)
                                            {
                                                <div class="menu-item px-3">
                                                    <form method="post" asp-page-handler="ToggleActive" asp-route-id="@currency.Id" class="d-inline">
                                                        <button type="submit" class="menu-link px-3 border-0 bg-transparent w-100 text-start" 
                                                                onclick="return confirm('@(currency.IsActive ? "Deactivate" : "Activate") @currency.Code currency?');">
                                                            @(currency.IsActive ? "Deactivate" : "Activate")
                                                        </button>
                                                    </form>
                                                </div>
                                                <div class="menu-item px-3">
                                                    <form method="post" asp-page-handler="Delete" asp-route-id="@currency.Id" 
                                                          onsubmit="return confirm('Are you sure you want to delete @currency.Code currency? This action cannot be undone.');" class="d-inline">
                                                        <button type="submit" class="menu-link px-3 text-danger border-0 bg-transparent w-100 text-start">
                                                            Delete
                                                        </button>
                                                    </form>
                                                </div>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Search functionality
        var table = document.getElementById('kt_currency_table');
        var searchInput = document.querySelector('[data-kt-currency-table-filter="search"]');
        
        searchInput.addEventListener('keyup', function (e) {
            var searchValue = e.target.value.toLowerCase();
            var rows = table.querySelectorAll('tbody tr');
            
            rows.forEach(function (row) {
                var text = row.textContent.toLowerCase();
                if (text.includes(searchValue)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>
}