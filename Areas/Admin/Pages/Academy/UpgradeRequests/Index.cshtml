@page
@model SteadyGrowth.Web.Areas.Admin.Pages.Academy.UpgradeRequests.IndexModel
@{
    ViewData["Title"] = "Academy Upgrade Requests";
}

<!-- Statistics Cards -->
<div class="row g-5 g-xl-10 mb-5 mb-xl-10">
    <div class="col-md-6 col-lg-6 col-xl-3 mb-md-5 mb-xl-10">
        <div class="card card-flush bgi-no-repeat bgi-size-contain bgi-position-x-end h-md-50 mb-5 mb-xl-10" style="background-color: #7239EA;">
            <div class="card-header pt-5">
                <div class="card-title d-flex flex-column">
                    <div class="d-flex align-items-center">
                        <span class="fs-2hx fw-bold text-white me-2 lh-1 ls-n2">@Model.Stats.TotalRequests</span>
                    </div>
                    <span class="text-white opacity-75 pt-1 fw-semibold fs-6">Total Requests</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-6 col-xl-3 mb-md-5 mb-xl-10">
        <div class="card card-flush bgi-no-repeat bgi-size-contain bgi-position-x-end h-md-50 mb-5 mb-xl-10" style="background-color: #F1416C;">
            <div class="card-header pt-5">
                <div class="card-title d-flex flex-column">
                    <div class="d-flex align-items-center">
                        <span class="fs-2hx fw-bold text-white me-2 lh-1 ls-n2">@Model.Stats.PendingRequests</span>
                    </div>
                    <span class="text-white opacity-75 pt-1 fw-semibold fs-6">Pending</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-6 col-xl-3 mb-md-5 mb-xl-10">
        <div class="card card-flush bgi-no-repeat bgi-size-contain bgi-position-x-end h-md-50 mb-5 mb-xl-10" style="background-color: #50CD89;">
            <div class="card-header pt-5">
                <div class="card-title d-flex flex-column">
                    <div class="d-flex align-items-center">
                        <span class="fs-2hx fw-bold text-white me-2 lh-1 ls-n2">@Model.Stats.ApprovedRequests</span>
                    </div>
                    <span class="text-white opacity-75 pt-1 fw-semibold fs-6">Approved</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-6 col-xl-3 mb-md-5 mb-xl-10">
        <div class="card card-flush bgi-no-repeat bgi-size-contain bgi-position-x-end h-md-50 mb-5 mb-xl-10" style="background-color: #E4E6EF;">
            <div class="card-header pt-5">
                <div class="card-title d-flex flex-column">
                    <div class="d-flex align-items-center">
                        <span class="fs-2hx fw-bold text-dark me-2 lh-1 ls-n2">@Model.Stats.ApprovalRate.ToString("N1")%</span>
                    </div>
                    <span class="text-dark opacity-75 pt-1 fw-semibold fs-6">Approval Rate</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header border-0 pt-6">
        <div class="card-title">
            <div class="d-flex align-items-center position-relative my-1">
                <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-5"></i>
                <input type="text" data-kt-filter="search" class="form-control form-control-solid w-250px ps-14" placeholder="Search requests..." value="@Model.SearchTerm" />
            </div>
        </div>
        <div class="card-toolbar">
            <div class="d-flex justify-content-end" data-kt-toolbar="base">
                <button type="button" class="btn btn-light-primary me-3" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                    <i class="ki-duotone ki-filter fs-2"></i>Filter
                </button>
                <a asp-page="./Pending" class="btn btn-primary">
                    <i class="ki-duotone ki-plus fs-2"></i>Pending Requests (@Model.Stats.PendingRequests)
                </a>
            </div>
        </div>
    </div>
    
    <!-- Filter Menu -->
    <div class="menu menu-sub menu-sub-dropdown w-300px w-md-325px" data-kt-menu="true">
        <div class="px-7 py-5">
            <div class="fs-5 text-dark fw-bold">Filter Options</div>
        </div>
        <div class="separator border-gray-200"></div>
        <form method="get" class="px-7 py-5">
            <div class="mb-10">
                <label class="form-label fs-6 fw-semibold">Status:</label>
                <select class="form-select form-select-solid fw-bold" name="StatusFilter">
                    <option value="">All Statuses</option>
                    <option value="0" selected="@(Model.StatusFilter == SteadyGrowth.Web.Models.Entities.UpgradeRequestStatus.Pending)">Pending</option>
                    <option value="1" selected="@(Model.StatusFilter == SteadyGrowth.Web.Models.Entities.UpgradeRequestStatus.Approved)">Approved</option>
                    <option value="2" selected="@(Model.StatusFilter == SteadyGrowth.Web.Models.Entities.UpgradeRequestStatus.Rejected)">Rejected</option>
                </select>
            </div>
            <div class="mb-10">
                <label class="form-label fs-6 fw-semibold">From Date:</label>
                <input type="date" class="form-control form-control-solid" name="FromDate" value="@(Model.FromDate?.ToString("yyyy-MM-dd"))" />
            </div>
            <div class="mb-10">
                <label class="form-label fs-6 fw-semibold">To Date:</label>
                <input type="date" class="form-control form-control-solid" name="ToDate" value="@(Model.ToDate?.ToString("yyyy-MM-dd"))" />
            </div>
            <div class="d-flex justify-content-end">
                <button type="submit" formmethod="post" formaction="?handler=ClearFilters" class="btn btn-light btn-active-light-primary fw-semibold me-2 px-6">Reset</button>
                <button type="submit" class="btn btn-primary fw-semibold px-6">Apply</button>
            </div>
        </form>
    </div>

    <div class="card-body py-4">
        @if (Model.UpgradeRequests.Any())
        {
            <div class="table-responsive">
                <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_table_upgrade_requests">
                    <thead>
                        <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">
                            <th class="min-w-125px">User</th>
                            <th class="min-w-125px">Package</th>
                            <th class="min-w-100px">Payment Method</th>
                            <th class="min-w-100px">Status</th>
                            <th class="min-w-100px">Requested Date</th>
                            <th class="min-w-100px">Processed Date</th>
                            <th class="text-end min-w-100px">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="text-gray-600 fw-semibold">
                        @foreach (var request in Model.UpgradeRequests)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="symbol symbol-35px me-3">
                                            <div class="symbol-label bg-light-primary">
                                                <i class="ki-duotone ki-user fs-2 text-primary"></i>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold">@request.User.FirstName @request.User.LastName</span>
                                            <span class="text-muted fs-7">@request.User.Email</span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="fw-bold">@request.RequestedPackage.Name</span>
                                        <span class="text-muted fs-7">$@request.RequestedPackage.Price.ToString("N2")</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge badge-light-info">@request.PaymentMethod</span>
                                </td>
                                <td>
                                    @{
                                        var statusClass = request.Status switch
                                        {
                                            SteadyGrowth.Web.Models.Entities.UpgradeRequestStatus.Pending => "badge-light-warning",
                                            SteadyGrowth.Web.Models.Entities.UpgradeRequestStatus.Approved => "badge-light-success",
                                            SteadyGrowth.Web.Models.Entities.UpgradeRequestStatus.Rejected => "badge-light-danger",
                                            _ => "badge-light-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass fw-bold">@request.Status</span>
                                </td>
                                <td>
                                    <span class="text-muted fs-7">@request.RequestedAt.ToString("MMM dd, yyyy")</span>
                                </td>
                                <td>
                                    @if (request.ProcessedAt.HasValue)
                                    {
                                        <span class="text-muted fs-7">@request.ProcessedAt.Value.ToString("MMM dd, yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fs-7">-</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a href="#" class="btn btn-light btn-active-light-primary btn-sm" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                        Actions
                                        <i class="ki-duotone ki-down fs-5 ms-1"></i>
                                    </a>
                                    <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
                                        <div class="menu-item px-3">
                                            <a asp-page="./Details" asp-route-id="@request.Id" class="menu-link px-3">
                                                <i class="ki-duotone ki-eye fs-5 me-1"></i>View Details
                                            </a>
                                        </div>
                                        @if (request.Status == SteadyGrowth.Web.Models.Entities.UpgradeRequestStatus.Pending)
                                        {
                                            <div class="menu-item px-3">
                                                <a asp-page="./Pending" class="menu-link px-3 text-success">
                                                    <i class="ki-duotone ki-check fs-5 me-1"></i>Process
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-10">
                <div class="text-center px-4">
                    <img class="mw-100 mh-300px" alt="" src="~/themes/metronic/v8_2/assets/media/illustrations/sketchy-1/5.png">
                </div>
                <div class="text-center px-4">
                    <h3 class="fs-2hx fw-bold mb-4">No Requests Found</h3>
                    <div class="fw-semibold fs-6 text-gray-500 mb-7">No upgrade requests match your current filters.</div>
                    <div class="mb-3">
                        <a asp-page="./Pending" class="btn btn-primary">View Pending Requests</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Initialize search functionality
        document.querySelector('[data-kt-filter="search"]').addEventListener('keyup', function (e) {
            if (e.key === 'Enter') {
                var searchTerm = e.target.value;
                var url = new URL(window.location);
                url.searchParams.set('SearchTerm', searchTerm);
                url.searchParams.set('PageIndex', '1');
                window.location.href = url.href;
            }
        });
    </script>
}