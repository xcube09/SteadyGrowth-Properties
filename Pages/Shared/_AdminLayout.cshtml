    <script src="~/themes/metronic/v8_2/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/themes/metronic/v8_2/assets/js/scripts.bundle.js"></script>
    <script src="~/lib/tinymce/tinymce.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var currentUrl = window.location.pathname;
            var menuLinks = document.querySelectorAll(".menu-link");

            menuLinks.forEach(function (link) {
                if (link.getAttribute("href") === currentUrl) {
                    link.classList.add("active");

                    var parentMenuItem = link.closest(".menu-item.menu-accordion");
                    if (parentMenuItem) {
                        parentMenuItem.classList.add("show");
                    }
                }
            });

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            })
        });
    </script>
</body>
</html>

@functions {
    public bool IsActivePage(string pageName)
    {
        var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
        if (currentPage == null)
        {
            return false;
        }

        // Handle directory-level matching (e.g., "/Properties/" for all properties pages)
        if (pageName.EndsWith("/"))
        {
            return currentPage.StartsWith(pageName, StringComparison.OrdinalIgnoreCase);
        }

        // Normalize pageName to match the format in RouteData.Values["page"]
        // e.g., "/Index" for Home, "/About" for About
        var normalizedPageName = pageName.StartsWith("/") ? pageName : "/" + pageName;

        // Special handling for the root page "/Index"
        if (normalizedPageName.Equals("/Index", StringComparison.OrdinalIgnoreCase) && currentPage.Equals("/", StringComparison.OrdinalIgnoreCase))
        {
            return true;
        }

        return currentPage.Equals(normalizedPageName, StringComparison.OrdinalIgnoreCase);
    }
} 