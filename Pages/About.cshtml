@page
@model AboutModel
@{
    ViewData["Title"] = "About Us - SteadyGrowth";
}
<!-- SEO Meta Tags -->
<meta name="description" content="Learn about SteadyGrowth, our mission, team, and values." />
<meta property="og:title" content="About SteadyGrowth" />
<meta property="og:description" content="Learn about SteadyGrowth, our mission, team, and values." />
<meta property="og:type" content="website" />

<section class="container py-5">
    <h1 class="mb-4 text-center">Our Story</h1>
    <div class="row mb-5">
        <div class="col-md-6">
            <p>SteadyGrowth was founded to make real estate investment accessible, transparent, and rewarding for everyone. Our platform connects investors with thoroughly vetted properties, ensuring trust and value at every step.</p>
            <p>We believe in empowering our users to grow their wealth and achieve their dreams through smart property investments.</p>
        </div>
        <div class="col-md-6 text-center">
            <img src="/images/about-story.jpg" class="img-fluid rounded shadow" alt="Our Story" />
        </div>
    </div>
    <h2 class="mb-4 text-center">Meet the Team</h2>
    <div class="row g-4 mb-5 justify-content-center">
        <!-- Example team members -->
        <div class="col-md-3 text-center">
            <img src="/images/team1.jpg" class="rounded-circle mb-2" width="120" height="120" alt="Team Member" />
            <h5>Jane Doe</h5>
            <p class="text-muted">CEO &amp; Co-Founder</p>
        </div>
        <div class="col-md-3 text-center">
            <img src="/images/team2.jpg" class="rounded-circle mb-2" width="120" height="120" alt="Team Member" />
            <h5>John Smith</h5>
            <p class="text-muted">CTO &amp; Co-Founder</p>
        </div>
        <div class="col-md-3 text-center">
            <img src="/images/team3.jpg" class="rounded-circle mb-2" width="120" height="120" alt="Team Member" />
            <h5>Mary Johnson</h5>
            <p class="text-muted">Head of Operations</p>
        </div>
    </div>
    <h2 class="mb-4 text-center">Our Values &amp; Achievements</h2>
    <div class="row mb-5">
        <div class="col-md-4 text-center">
            <i class="bi bi-shield-check display-4 text-success mb-2"></i>
            <h6>Trust &amp; Transparency</h6>
            <p>Every property is thoroughly vetted for your peace of mind.</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="bi bi-award display-4 text-warning mb-2"></i>
            <h6>Award-Winning Service</h6>
            <p>Recognized for excellence in customer satisfaction and innovation.</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="bi bi-graph-up display-4 text-info mb-2"></i>
            <h6>Growth &amp; Success</h6>
            <p>Thousands of users have grown their wealth with SteadyGrowth.</p>
        </div>
    </div>
    <h2 class="mb-4 text-center">Contact Us</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><i class="bi bi-envelope"></i> Email: <a href="mailto:info@steadygrowth.com">info@steadygrowth.com</a></li>
                <li class="list-group-item"><i class="bi bi-telephone"></i> Phone: +1 (555) 123-4567</li>
                <li class="list-group-item"><i class="bi bi-geo-alt"></i> Address: 123 Main St, Lagos, Nigeria</li>
            </ul>
        </div>
    </div>
</section>
