@page
@model SteadyGrowth.Web.Pages.Listings.AddListingModel
@{
    ViewData["Title"] = "Add Listing";
}

<h2>Add New Property Listing</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Property.Title"></label>
        <input asp-for="Property.Title" class="form-control" />
        <span asp-validation-for="Property.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Property.Description"></label>
        <textarea asp-for="Property.Description" class="form-control"></textarea>
        <span asp-validation-for="Property.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Property.Price"></label>
        <input asp-for="Property.Price" class="form-control" />
        <span asp-validation-for="Property.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Property.Location"></label>
        <input asp-for="Property.Location" class="form-control" />
        <span asp-validation-for="Property.Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Property Images</label>
        <input type="file" asp-for="Images" class="form-control" multiple />
        <span asp-validation-for="Images" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit Listing</button>
</form>
