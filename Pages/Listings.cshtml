@page
@model SteadyGrowth.Web.Pages.ListingsModel
@{
    ViewBag.Title = "Property Listings";
}


<!-- PRODUCT DETAILS AREA START -->
<div class="ltn__product-area ltn__product-gutter mb-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="ltn__shop-options">
                    <ul class="justify-content-start">
                        <li>
                            <div class="ltn__grid-list-tab-menu ">
                                <div class="nav">
                                    <a data-bs-toggle="tab" href="#liton_product_grid"><i class="fas fa-th-large"></i></a>
                                    <a class="active show" data-bs-toggle="tab" href="#liton_product_list"><i class="fas fa-list"></i></a>
                                </div>
                            </div>
                        </li>
                        <li class="d-none">
                            <div class="showing-product-number text-right">
                                <span>Showing @(Model.Properties != null ? (Model.Properties.PageIndex - 1) * Model.Properties.PageSize + 1 : 0)â€“@(Model.Properties != null ? Math.Min(Model.Properties.PageIndex * Model.Properties.PageSize, Model.Properties.TotalCount) : 0) of @(Model.Properties != null ? Model.Properties.TotalCount : 0) results</span>
                            </div>
                        </li>
                        <li>
                            <div class="short-by text-center">
                                <select class="nice-select">
                                    <option>Default Sorting</option>
                                    <option>Sort by popularity</option>
                                    <option>Sort by new arrivals</option>
                                    <option>Sort by price: low to high</option>
                                    <option>Sort by price: high to low</option>
                                </select>
                            </div>
                        </li>
                        <li>
                            <div class="short-by text-center">
                                <select class="nice-select">
                                    <option>Per Page: 9</option>
                                    <option>Per Page: 12</option>
                                    <option>Per Page: 20</option>
                                    <option>Per Page: 30</option>
                                    <option>Per Page: 50</option>
                                </select>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="tab-content">
                    <div class="tab-pane fade" id="liton_product_grid">
                        <div class="ltn__product-tab-content-inner ltn__product-grid-view">
                            <div class="row">
                                <div class="col-lg-12">
                                    <!-- Search Widget -->
                                    <div class="ltn__search-widget mb-30">
                                        <form action="#">
                                            <input type="text" name="search" placeholder="Search your keyword...">
                                            <button type="submit"><i class="fas fa-search"></i></button>
                                        </form>
                                    </div>
                                </div>
                                @if (Model.Properties != null && Model.Properties.Any())
                                {
                                    @foreach (var property in Model.Properties)
                                    {
                                        <div class="col-xl-6 col-sm-6 col-12">
                                            <div class="ltn__product-item ltn__product-item-4 ltn__product-item-5 text-center---">
                                                <div class="product-img">
                                                    @if (property.PropertyImages != null && property.PropertyImages.Any())
                                                    {
                                                        var fileName = property.PropertyImages.First().FileName;
                                                        var imageSrc = fileName.StartsWith("/") ? fileName : $"/images/properties/{fileName}";
                                                        <a href="/Properties/Details/@property.Id"><img src="@imageSrc" alt="@property.Title"></a>
                                                    }
                                                    else
                                                    {
                                                        <a href="/Properties/Details/@property.Id"><img src="~/images/no-image.png" alt="No Image"></a>
                                                    }
                                                    <div class="real-estate-agent">
                                                        <div class="agent-img">
                                                            <a href="#"><img src="/images/default-agent.jpg" alt="Agent"></a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="product-info">
                                                    <div class="product-badge">
                                                        <ul>
                                                            <li class="sale-badg">@property.Status</li>
                                                        </ul>
                                                    </div>
                                                    <h2 class="product-title"><a href="/Properties/Details/@property.Id">@property.Title</a></h2>
                                                    <div class="product-img-location">
                                                        <ul>
                                                            <li>
                                                                <a href="#"><i class="flaticon-pin"></i> @property.Location</a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                    <ul class="ltn__list-item-2--- ltn__list-item-2-before--- ltn__plot-brief">
                                                        <li><span>3 </span>
                                                            Bed
                                                        </li>
                                                        <li><span>2 </span>
                                                            Bath
                                                        </li>
                                                        <li><span>1200 </span>
                                                            Square Ft
                                                        </li>
                                                    </ul>
                                                    <div class="product-hover-action">
                                                        <ul>
                                                            <li>
                                                                <a href="#" title="Quick View" data-bs-toggle="modal" data-bs-target="#quick_view_modal">
                                                                    <i class="flaticon-expand"></i>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="#" title="Wishlist" data-bs-toggle="modal" data-bs-target="#liton_wishlist_modal">
                                                                    <i class="flaticon-heart-1"></i>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="/Properties/Details/@property.Id" title="Property Details">
                                                                    <i class="flaticon-add"></i>
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                                <div class="product-info-bottom">
                                                    <div class="product-price">
                                                        <span>NGN @property.Price.ToString("N2")</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="col-12">
                                        <p>No approved properties found.</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade active show" id="liton_product_list">
                        <div class="ltn__product-tab-content-inner ltn__product-list-view">
                            <div class="row">
                                <div class="col-lg-12">
                                    <!-- Search Widget -->
                                    <div class="ltn__search-widget mb-30">
                                        <form action="#">
                                            <input type="text" name="search" placeholder="Search your keyword...">
                                            <button type="submit"><i class="fas fa-search"></i></button>
                                        </form>
                                    </div>
                                </div>
                                @if (Model.Properties != null && Model.Properties.Any())
                                {
                                    @foreach (var property in Model.Properties)
                                    {
                                        <div class="col-lg-12">
                                            <div class="ltn__product-item ltn__product-item-4 ltn__product-item-5">
                                                <div class="product-img">
                                                    @if (property.PropertyImages != null && property.PropertyImages.Any())
                                                    {
                                                        var fileName = property.PropertyImages.First().FileName;
                                                        var imageSrc = fileName.StartsWith("/") ? fileName : $"/images/properties/{fileName}";
                                                        <a href="/Properties/Details/@property.Id"><img src="@imageSrc" alt="@property.Title"></a>
                                                    }
                                                    else
                                                    {
                                                        <a href="/Properties/Details/@property.Id"><img src="~/images/no-image.png" alt="No Image"></a>
                                                    }
                                                </div>
                                                <div class="product-info">
                                                    <div class="product-badge-price">
                                                        <div class="product-badge">
                                                            <ul>
                                                                <li class="sale-badg">@property.Status</li>
                                                            </ul>
                                                        </div>
                                                        <div class="product-price">
                                                            <span>NGN @property.Price.ToString("N2")</span>
                                                        </div>
                                                    </div>
                                                    <h2 class="product-title"><a href="/Properties/Details/@property.Id">@property.Title</a></h2>
                                                    <div class="product-img-location">
                                                        <ul>
                                                            <li>
                                                                <a href="#"><i class="flaticon-pin"></i> @property.Location</a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                    <ul class="ltn__list-item-2--- ltn__list-item-2-before--- ltn__plot-brief">
                                                        <li><span>3 </span>
                                                            Bed
                                                        </li>
                                                        <li><span>2 </span>
                                                            Bath
                                                        </li>
                                                        <li><span>1200 </span>
                                                            Square Ft
                                                        </li>
                                                    </ul>
                                                </div>
                                                <div class="product-info-bottom">
                                                    <div class="real-estate-agent">
                                                        <div class="agent-img">
                                                            <a href="#"><img src="/images/default-agent.jpg" alt="Agent"></a>
                                                        </div>
                                                        <div class="agent-brief">
                                                            <h6><a href="#">SteadyGrowth Agent</a></h6>
                                                            <small>Estate Agent</small>
                                                        </div>
                                                    </div>
                                                    <div class="product-hover-action">
                                                        <ul>
                                                            <li>
                                                                <a href="#" title="Quick View" data-bs-toggle="modal" data-bs-target="#quick_view_modal">
                                                                    <i class="flaticon-expand"></i>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="#" title="Wishlist" data-bs-toggle="modal" data-bs-target="#liton_wishlist_modal">
                                                                    <i class="flaticon-heart-1"></i>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="/Properties/Details/@property.Id" title="Property Details">
                                                                    <i class="flaticon-add"></i>
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="col-12">
                                        <p>No approved properties found.</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="ltn__pagination-area text-center">
                    <div class="ltn__pagination">
                        <ul>
                            <li class="@(Model.Properties != null && Model.Properties.HasPreviousPage ? "" : "disabled")">
                                <a asp-page="./Listings" asp-route-pageIndex="@(Model.Properties != null ? Model.Properties.PageIndex - 1 : 1)"><i class="fas fa-angle-double-left"></i></a>
                            </li>
                            @if (Model.Properties != null)
                            {
                                @for (var i = 1; i <= Model.Properties.TotalPages; i++)
                                {
                                    <li class="@(i == Model.Properties.PageIndex ? "active" : "")">
                                        <a asp-page="./Listings" asp-route-pageIndex="@i">@i</a>
                                    </li>
                                }
                            }
                            <li class="@(Model.Properties != null && Model.Properties.HasNextPage ? "" : "disabled")">
                                <a asp-page="./Listings" asp-route-pageIndex="@(Model.Properties != null ? Model.Properties.PageIndex + 1 : 1)"><i class="fas fa-angle-double-right"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <aside class="sidebar ltn__shop-sidebar ltn__right-sidebar">
                    <h3 class="mb-10">Advance Information</h3>
                    <label class="mb-30"><small>About @(Model.Properties?.TotalCount ?? 0) results</small></label>
                    <!-- Price Filter Widget -->
                    <div class="widget ltn__price-filter-widget">
                        <h4 class="ltn__widget-title ltn__widget-title-border---">Filter by price</h4>
                        <div class="price_filter">
                            <div class="price_slider_amount">
                                <input type="submit" value="Your range:" />
                                <input type="text" class="amount" name="price" placeholder="Add Your Price" />
                            </div>
                            <div class="slider-range"></div>
                        </div>
                    </div>
                    <!-- Property Type Widget -->
                    <div class="widget ltn__menu-widget">
                        <h4 class="ltn__widget-title">Property Type</h4>
                        <ul>
                            <li>
                                <label class="checkbox-item">House
                                    <input type="checkbox" checked="checked">
                                    <span class="checkmark"></span>
                                </label>
                                <span class="categorey-no">3,924</span>
                            </li>
                            <li>
                                <label class="checkbox-item">Single Family
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                                <span class="categorey-no">3,610</span>
                            </li>
                            <li>
                                <label class="checkbox-item">Apartment
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                                <span class="categorey-no">2,912</span>
                            </li>
                            <li>
                                <label class="checkbox-item">Office Villa
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                                <span class="categorey-no">2,687</span>
                            </li>
                            <li>
                                <label class="checkbox-item">Luxury Home
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                                <span class="categorey-no">1,853</span>
                            </li>
                            <li>
                                <label class="checkbox-item">Studio
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                                <span class="categorey-no">893</span>
                            </li>
                        </ul>
                    </div>
                </aside>
            </div>
        </div>
    </div>
</div>
<!-- PRODUCT DETAILS AREA END -->

@functions {
    public string GetStatusBadgeClass(SteadyGrowth.Web.Models.Entities.PropertyStatus status)
    {
        return status switch
        {
            SteadyGrowth.Web.Models.Entities.PropertyStatus.Draft => "bg-secondary",
            SteadyGrowth.Web.Models.Entities.PropertyStatus.Pending => "bg-warning",
            SteadyGrowth.Web.Models.Entities.PropertyStatus.Approved => "bg-success",
            SteadyGrowth.Web.Models.Entities.PropertyStatus.Rejected => "bg-danger",
            _ => "bg-info",
        };
    }
}